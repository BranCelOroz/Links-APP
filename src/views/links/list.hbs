<div class="container ">
    <div class="row">  
        {{#each links}}
            <div class="col-md-3 m-2">
                <div class="card text-center p-4">
                    <div class="carda-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase ">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-outline-danger">Eliminar</a>
                        <a href="/links/edit/{{id}}" class="btn btn-outline-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto ">
                <div class="card card-body text-center mt-5">
                    <p>Tu no tienes links Guardados Aun.</p>
                    <a href="/links/add" class="btn btn-outline-success btn-block">Agregar Uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>